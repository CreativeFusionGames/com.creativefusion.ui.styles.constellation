

#path-frame { max-width: 900px; }
.path-nodes__item { width: 72px; height: 72px; border-radius: 999px; align-items: center; justify-content: center; border-left-width: 2px; border-right-width: 2px; border-top-width: 2px; border-bottom-width: 2px; border-left-color: rgba(255,255,255,0.20); border-right-color: rgba(255,255,255,0.20); border-top-color: rgba(255,255,255,0.20); border-bottom-color: rgba(255,255,255,0.20); background-color: rgba(255,255,255,0.10); margin-top: 6px; margin-bottom: 6px; }
.path-nodes__item.is-current { background-image: linear-gradient(135deg, var(--ce-primary-a), var(--ce-primary-b)); border-left-width: 0; border-right-width: 0; border-top-width: 0; border-bottom-width: 0; }
.path-nodes__item.is-completed { background-color: rgba(102,126,234,0.30); border-left-color: #667eea; border-right-color: #667eea; border-top-color: #667eea; border-bottom-color: #667eea; }
.path-nodes__item.is-locked { color: rgba(255,255,255,0.45); }

