    --font-size-xs: 11px;
    --font-size-sm: 12px;
    --font-size-base: 14px;
    --font-size-md: 15px;
    --font-size-lg: 18px;
    --font-size-xl: 22px;
    --font-size-2xl: 28px;
    --font-size-3xl: 32px;
}
/* ---------- Layout helpers ---------- */
.cosmicelements-screen-root,
.cosmicelements-screen,
.cosmicelements-frame,
.screen {
    -unity-text-align: upper-left;
    text-align: left;
    flex-grow: 1;
    flex-direction: column;
    width: 100%;
    height: 100%;
    color: var(--c-text);
    background-color: var(--c-bg);
}

.layout-column { flex-direction: column; }
.layout-row    { flex-direction: row; }
.right         { margin-left: auto; }

.section {
    padding-left: 12px;
    padding-right: 12px;
    padding-top: 8px;
    padding-bottom: 8px;
}

.content {
    flex-grow: 1;
    padding-left: 12px;
    padding-right: 12px;
    padding-top: 8px;
    padding-bottom: 8px;
}

/* ---------- Background overlay (simple) ---------- */
.cosmicelements-background {
    position: absolute;
    left: 0; right: 0; top: 0; bottom: 0;
    background-color: var(--c-bg);
    opacity: 1;
}

/* ---------- Typography ---------- */
.title-xl {
    -unity-font-definition: var(--font-family-default);
    font-size: var(--font-size-3xl);
    -unity-font-style: bold;
    font-style: bold;
    color: var(--c-text);
    letter-spacing: -0.5px;
}
.title-lg {
    -unity-font-definition: var(--font-family-default);
    font-size: var(--font-size-xl);
    -unity-font-style: bold;
    font-style: bold;
    color: var(--c-text);
}
.subtitle, .ce-subtitle {
    -unity-font-definition: var(--font-family-default);
    font-size: var(--font-size-base);
    color: var(--c-text-muted);
}
.kicker {
    -unity-font-definition: var(--font-family-default);
    font-size: var(--font-size-sm);
    color: var(--c-text-kicker);
    text-transform: uppercase;
    letter-spacing: 1px;
}
.body, .text-base {
    -unity-font-definition: var(--font-family-default);
    font-size: var(--font-size-base);
    color: var(--c-text);
}
.text-sm {
    -unity-font-definition: var(--font-family-default);
    font-size: var(--font-size-sm);
    color: var(--c-text);
}

/* ---------- Header ---------- */
.header {
    padding-left: 16px;
    padding-right: 16px;
    padding-top: 24px;
    padding-bottom: 8px;
}
.header .title-lg { margin-bottom: 4px; }

/* ---------- Stacks ---------- */
.vstack { flex-direction: column; }
.hstack { flex-direction: row; align-items: center; }

/* add spacing between children without relying on gap (for broad Unity support) */
.vstack > * { margin-top: 10px; }
.vstack > *:first-child { margin-top: 0; }
.hstack > * { margin-right: 10px; }
.hstack > *:last-child { margin-right: 0; }

/* ---------- Panels & Cards ---------- */
.panel, .card {
    background-color: var(--c-panel);
    border-left-color: var(--c-panel-border);
    border-right-color: var(--c-panel-border);
    border-top-color: var(--c-panel-border);
    border-bottom-color: var(--c-panel-border);
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
    border-bottom-left-radius: 12px;
    border-bottom-right-radius: 12px;
    padding-left: 12px;
    padding-right: 12px;
    padding-top: 10px;
    padding-bottom: 10px;
    color: var(--c-text);
}

/* ---------- Buttons ---------- */
.btn {
    -unity-font-style: bold;
    font-style: bold;
    font-size: var(--font-size-base);
    color: var(--c-text);
    background-color: rgba(255,255,255,0.10);
    border-left-width: 1px; border-right-width: 1px; border-top-width: 1px; border-bottom-width: 1px;
    border-left-color: rgba(255,255,255,0.10); border-right-color: rgba(255,255,255,0.10);
    border-top-color: rgba(255,255,255,0.10);  border-bottom-color: rgba(255,255,255,0.10);
    border-top-left-radius: 12px; border-top-right-radius: 12px; border-bottom-left-radius: 12px; border-bottom-right-radius: 12px;
    padding-left: 14px; padding-right: 14px; padding-top: 12px; padding-bottom: 12px;
    margin-top: 6px; margin-bottom: 6px;
}
.btn--small {
    padding-left: 10px; padding-right: 10px; padding-top: 8px; padding-bottom: 8px;
    -unity-font-style: normal;
    font-style: normal;
    font-size: var(--font-size-sm);
}
.btn--primary {
    background-color: var(--c-primary);
    border-left-color: var(--c-primary); border-right-color: var(--c-primary);
    border-top-color: var(--c-primary);  border-bottom-color: var(--c-primary);
}

/* Icon-ish circular buttons */
.icon-button {
    width: 48px; height: 48px;
    background-color: rgba(255,255,255,0.10);
    border-left-width: 1px; border-right-width: 1px; border-top-width: 1px; border-bottom-width: 1px;
    border-left-color: rgba(255,255,255,0.10); border-right-color: rgba(255,255,255,0.10);
    border-top-color: rgba(255,255,255,0.10);  border-bottom-color: rgba(255,255,255,0.10);
    border-top-left-radius: 24px; border-top-right-radius: 24px; border-bottom-left-radius: 24px; border-bottom-right-radius: 24px;
    -unity-text-align: middle-center;
    text-align: center;
    color: var(--c-text);
}
.icon-button.active {
    background-color: rgba(255,255,255,0.20);
}

/* ---------- Footer menu ---------- */
.menu-footer {
    padding-left: 20px; padding-right: 20px; padding-bottom: 16px; padding-top: 10px;
    flex-direction: row;
    justify-content: space-between;
}

/* ---------- Badges ---------- */
.badge {
    color: var(--c-text);
    background-color: rgba(255,255,255,0.12);
    border-left-width: 1px; border-right-width: 1px; border-top-width: 1px; border-bottom-width: 1px;
    border-left-color: rgba(255,255,255,0.12); border-right-color: rgba(255,255,255,0.12);
    border-top-color: rgba(255,255,255,0.12);  border-bottom-color: rgba(255,255,255,0.12);
    padding-left: 8px; padding-right: 8px; padding-top: 4px; padding-bottom: 4px;
    border-top-left-radius: 999px; border-top-right-radius: 999px; border-bottom-left-radius: 999px; border-bottom-right-radius: 999px;
    -unity-font-style: bold;
    font-style: bold;
    font-size: var(--font-size-xs);
}

/* ---------- Lists / tables ---------- */
.tr { flex-direction: row; align-items: center; justify-content: space-between; }
.tr .cell { padding-left: 10px; padding-right: 10px; padding-top: 8px; padding-bottom: 8px; }
.tr.panel { padding-left: 0; padding-right: 0; padding-top: 0; padding-bottom: 0; }

/* ---------- Grids (approx via flex-wrap) ---------- */
.grid-3, .grid-2 {
    flex-direction: row; flex-wrap: wrap; justify-content: space-between;
}
.grid-3 > * {
    width: 32%;
    margin-bottom: 8px;
}
.grid-2 > * {
    width: 48%;
    margin-bottom: 10px;
}

/* ---------- ProgressBar theming ---------- */
.progress {
    height: 10px;
}
.progress .unity-progress-bar__background {
    background-color: rgba(255,255,255,0.10);
    border-top-left-radius: 8px; border-top-right-radius: 8px; border-bottom-left-radius: 8px; border-bottom-right-radius: 8px;
}
.progress .unity-progress-bar__progress {
    background-color: var(--c-accent);
    border-top-left-radius: 8px; border-top-right-radius: 8px; border-bottom-left-radius: 8px; border-bottom-right-radius: 8px;
}

/* ---------- Level path nodes ---------- */
.level-node {
    width: 64px; height: 64px;
    -unity-text-align: middle-center;
    text-align: center;
    -unity-font-style: bold;
    font-style: bold;
    font-size: var(--font-size-lg);
    color: var(--c-text);
    background-color: rgba(255,255,255,0.10);
    border-left-width: 2px; border-right-width: 2px; border-top-width: 2px; border-bottom-width: 2px;
    border-left-color: rgba(255,255,255,0.20); border-right-color: rgba(255,255,255,0.20);
    border-top-color: rgba(255,255,255,0.20);  border-bottom-color: rgba(255,255,255,0.20);
    border-top-left-radius: 32px; border-top-right-radius: 32px; border-bottom-left-radius: 32px; border-bottom-right-radius: 32px;
}
.level-node.completed { background-color: rgba(102,126,234,0.30); border-left-color: #667eea; border-right-color: #667eea; border-top-color: #667eea; border-bottom-color: #667eea; }
.level-node.current   { background-color: #667eea; border-left-width: 0; border-right-width: 0; border-top-width: 0; border-bottom-width: 0; }
.level-node.locked    { color: rgba(255,255,255,0.35); border-left-color: rgba(255,255,255,0.12); border-right-color: rgba(255,255,255,0.12); border-top-color: rgba(255,255,255,0.12); border-bottom-color: rgba(255,255,255,0.12); }

/* ---------- Stars ---------- */
.stars { flex-direction: row; }
.star  { color: var(--c-warning); }

/* ---------- Utilities ---------- */
.sep { height: 1px; background-color: rgba(255,255,255,0.12); }
.centered { align-items: center; justify-content: center; -unity-text-align: middle-center; text-align: center; }
.muted { color: var(--c-text-muted); }