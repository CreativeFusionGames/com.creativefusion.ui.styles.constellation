/* ---------- Theme tokens (fallbacks) ---------- */

@font-face {
    font-family: "MyCustomFont";
    src: resource("Fonts/MyCustomFont");
}

:root {
    --c-bg: #0a0e27;
    --c-panel: rgba(255,255,255,0.08);
    --c-panel-border: rgba(255,255,255,0.12);
    --c-text: #ffffff;
    --c-text-muted: rgba(255,255,255,0.75);
    --c-text-kicker: rgba(255,255,255,0.6);
    --c-primary: #667eea;
    --c-primary-2: #764ba2;
    --c-accent: #43cea2;
    --c-accent-2: #185a9d;
    --c-warning: #ffc107;
    
