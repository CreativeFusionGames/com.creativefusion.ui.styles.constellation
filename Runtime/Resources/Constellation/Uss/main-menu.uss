.menu-button-group {
    max-width: 360px;
}

.menu-button {
    justify-content: center;
}

.menu-button--primary {
    background-image: linear-gradient(120deg, rgba(124, 93, 250, 0.9), rgba(83, 222, 238, 0.7));
}

.menu-button--primary:hover {
    background-image: linear-gradient(120deg, rgba(168, 140, 255, 0.95), rgba(112, 238, 252, 0.85));
}

.menu-button--secondary {
    align-self: flex-end;
    width: 180px;
}
