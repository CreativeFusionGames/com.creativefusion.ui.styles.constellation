:root {
    --constellation-primary: #7c5dfa;
    --constellation-primary-bright: #a786ff;
    --constellation-secondary: #1b2f52;
    --constellation-surface: rgba(16, 22, 45, 0.88);
    --constellation-surface-alt: rgba(20, 28, 56, 0.72);
    --constellation-border: rgba(124, 93, 250, 0.45);
    --constellation-text-muted: rgba(255, 255, 255, 0.72);
}

.constellation-screen {
    flex-grow: 1;
    position: relative;
    color: white;
    font-size: 16px;
}

.constellation-background {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-image: radial-gradient(circle at 20% -10%, rgba(124, 93, 250, 0.45), transparent 55%),
        radial-gradient(circle at 80% 10%, rgba(83, 222, 238, 0.35), transparent 60%),
        linear-gradient(160deg, #050b1a, #0e1631 55%, #060913);
    opacity: 0.85;
    pointer-events: none;
}

.constellation-frame {
    position: relative;
    margin: 32px;
    padding: 32px;
    border-radius: 18px;
    background-color: var(--constellation-surface);
    border: 1px solid var(--constellation-border);
    gap: 20px;
    box-shadow: 0 28px 48px rgba(12, 18, 40, 0.55);
}

.constellation-title {
    unity-font-style: bold;
    font-size: 32px;
    letter-spacing: 2px;
}

.constellation-subtitle {
    color: var(--constellation-text-muted);
    unity-font-style: normal;
    font-size: 16px;
}

.layout-column {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.layout-row {
    display: flex;
    flex-direction: row;
    gap: 16px;
}

.form-button,
.menu-button {
    min-height: 42px;
    font-size: 16px;
    border-radius: 10px;
    border-width: 0;
    color: white;
    background-color: var(--constellation-primary);
    unity-font-style: bold;
    letter-spacing: 1px;
    transition-duration: 200ms;
}

.form-button:hover,
.menu-button:hover {
    background-color: var(--constellation-primary-bright);
}

.form-button:disabled,
.menu-button:disabled {
    background-color: rgba(124, 93, 250, 0.25);
    color: rgba(255, 255, 255, 0.4);
}

.form-button--secondary,
.menu-button--secondary {
    background-color: rgba(255, 255, 255, 0.08);
    color: var(--constellation-text-muted);
    border: 1px solid rgba(124, 93, 250, 0.35);
}

.form-button--secondary:hover,
.menu-button--secondary:hover {
    background-color: rgba(255, 255, 255, 0.14);
}

.constellation-input {
    background-color: var(--constellation-surface-alt);
    border-radius: 10px;
    border: 1px solid rgba(124, 93, 250, 0.25);
    color: white;
    padding: 6px 12px;
}

.constellation-input > .unity-text-input {
    background-color: transparent;
    color: white;
}

.constellation-input > .unity-label {
    color: var(--constellation-primary-bright);
    unity-font-style: bold;
}

.form-button-row,
.shop-action-row,
.level-actions {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    gap: 12px;
}

.menu-button-group {
    width: 320px;
}

.preview-title,
.inspector-title {
    unity-font-style: bold;
    font-size: 18px;
}

.preview-description,
.inspector-description {
    color: var(--constellation-text-muted);
    font-size: 14px;
    line-height: 1.4;
}

.list-item {
    padding: 12px 14px;
    border-radius: 12px;
    background-color: rgba(255, 255, 255, 0.04);
    border: 1px solid transparent;
    transition-duration: 150ms;
}

.list-item:hover {
    border-color: rgba(124, 93, 250, 0.55);
}

.list-item.is-locked {
    opacity: 0.55;
}

.list-item.is-owned {
    border-color: rgba(83, 222, 238, 0.65);
}

.item-title {
    unity-font-style: bold;
    font-size: 16px;
}

.item-status,
.item-cost {
    color: var(--constellation-text-muted);
    font-size: 13px;
}
